/* pages/classify/classify.wxss */
.classify{
  width: 100%;
  height: 100%;
  background: #3cf;
}
.left{
  float: left;
}
.right{
  float: right;
}
.scroll-view-x{
  /* width: 100%; */
  height: 30px;
  background: purple;
  font-size: 14px;
  color: #000;
  line-height: 30px;
}
.text{
  display: inline-block;
  width: 80px;
  height: 30px;
}
.text:active{
  color: rgb(223, 226, 17);
}
.list{
  background: rgb(98, 44, 168);
}
.goods{
  background: rgb(27, 151, 54);
}
.list_text{
  width: 100%;
  height: 30px;
  text-align: center;
  font-size: 12px;
  line-height: 30px;
}
.goods{
  padding: 8px;
  background: rgb(181, 200, 206);
  box-sizing: border-box;
}
.goods_txte{
  width: 100%;
  height:85px;
  /* text-align: center; */
  margin-top: 8px;
  padding: 5px;
  box-sizing: border-box;
  background: #fff;
}
.goods_area{
  /* background: #fff; */
  width: 60%;
}
.goods_head{
  font-size: 16px;
  color: #000;
}
.goods_desc{
  font-size: 12px;
  margin-top: 3px;
  margin-bottom: 3px;
}
.goods_money{
  font-size: 14px;
}
.goods_img{
  width: 60px;
  height: 60px;
}
.goods_area text{
  display: inline-block;
  width: 80%;
}