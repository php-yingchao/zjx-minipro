.intro {
  margin: 30px;
  text-align: center;
}
page{
  width: 100%;
  height: 100%;
}
.left {
  float: left;
}

.right {
  float: right;
}

.box {
  width: 100%;
  height: 100%;
  /* height: 30px; */
  background: rgb(107, 98, 99);
  padding: 30px 0 0;
}

.fxied {
  width: 100%;
  height: 30px;
  background: #fff;
  font-size: 16px;
  line-height: 30px;
  padding: 5px 0;
  position: fixed;
  top: 0;
  z-index: 999;
}

.href {
  background: rgb(221, 212, 212);
  border-radius: 15px;
  font-size: 14px;
  line-height: 30px;
}

.href icon {
  margin-left: 15px;
  margin-top: 9px;
  margin-right: 10px;
}

.href input {
  margin-top: 4px;
}

.nav {
  width: 100%;
  padding: 5px 0;
  background: pink;
  display: flex;
  flex-wrap: wrap;
  margin-top: 15px;
}

.warp {
  width: 20%;
  height: 65px;
  text-align: center;
  background: red;
  margin-top: 5px;
}

.img-mo {
  width: 40px;
  height: 40px;
  /* padding: 0 15px; */
  box-sizing: border-box;
  background: #3cf;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto;
}

.warp image {
  width: 30px;
  height: 30px;
  margin-top: 5px;
}

.warp text {
  font-size: 12px;
  width: 100%;
}

.banner {
  width: 100%;
  height: 145px;
  margin-top: 5px;
}

.banner image {
  width: 100%;
  height: 145px;
  display: block;
}
.rim{
  width: 100%;
  height: 145px;
  margin-top: 5px;
  background: #3cf;
  position: relative;
}
.rim image{
  width: 100%;
  height: 100%;
}
.rim button{
  width: 140px;
  height: 40px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -20px;
  margin-left: -70px;
  background: #fd9c016b;
  font-size: 14px;
  line-height: 46px;
  border-radius: 25px;
  color: #fff;
  border: 1px solid #fff;
  box-sizing: border-box;
}
.rim button image{
  width: 15px;
  height: 20px;
  margin-top: 13px;
}
.scroll-area{
  width: 100%;
  /* height: 300px; */
  background: red;
  margin-top: 5px;
}
.box-item{
  width: 94%;
  height: 150px;
  background: pink;
  margin: 15px auto 0;
  padding: 10px 0;
  box-sizing: border-box;
}
.item-img{
  width: 80px;
  height: 120px;
}
.describe{
  width: 75%;
  font-size: 12px;
  margin-left: 8px;
}
.name{
  width: 100%;
  display: block;
  font-size: 16px;
}
.desc{
  width: 100%;
  display: block;
  color: rgb(238, 227, 227);
  margin-top: 15px;
}
.money{
  color: rgb(206, 98, 25);
  margin-top: 30px;
  font-size: 20px;
}
.symbol{
  font-size: 10px;
}